{
  "name": "wyse",
  "version": "0.0.20",
  "description": "package local files to epub",
  "main": "dist/index.js",
  "author": "Zheng Xu <zxu@gardenia-corp.com> (https://github.com/Jeffxz)",
  "keywords": [
    "epub",
    "convert",
    "wysebee"
  ],
  "repository": "https://github.com/gardenia-corp/wyse.git",
  "homepage": "https://github.com/gardenia-corp/wyse",
  "bugs": {
    "url": "https://github.com/gardenia-corp/wyse/issues"
  },
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' ./src/index.ts",
    "convert": "ts-node ./src/index.ts",
    "build": "tsc -p .",
    "lint": "eslint --ext .ts,.tsx,.js --no-eslintrc -c ./eslint.js index.ts src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "refresh": "rm -rf ./node_modules ./dist ./yarn.lock && yarn"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "epub-object-ts": "^0.0.16",
    "file-saver": "^2.0.5",
    "jszip": "^3.7.1",
    "marked": "^4.0.9",
    "mime-types": "^2.1.34",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/file-saver": "^2.0.4",
    "@types/jszip": "^3.4.1",
    "@types/marked": "^4.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.5",
    "@types/uuid": "^8.3.4",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "wyse": "./dist/src/index.js"
  }
}
